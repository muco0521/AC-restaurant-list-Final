<h1 class="mb-1 restaurant-show-title">{{ restaurant.name }}</h1>
<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">
      <div class="d-flex justify-content-between">
        <p class="mb-1">
          <span class="text-secondary">
            <i class="fas fa-utensils pr-2"></i>
            類別：
          </span>
          {{ restaurant.category }}
        </p>
        <span class="text-secondary">
          <a href="./{{ restaurant._id }}/edit"><button class="badge btn-success button">edit</button></a>
          <form class="d-inline-block" action="/restaurants/{{ restaurant._id }}/delete" method="post">
            <button type="submit" class="badge bg-danger button">Delete</button>
          </form>
          <a href="/"><button class="badge btn-major button"><i class="fas fa-home"></i></button></a>
        </span>
      </div>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2"></i>
          地址：
        </span>
        {{ restaurant.location }}
        <a href="{{ restaurant.google_map }}" class="text-secondary" target="_blank">
          <i class="fas fa-location-arrow pr-2 fa-xs"></i>
        </a>
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-2"></i>
          電話：
        </span>
        {{ restaurant.phone }}
      </p>

      <p class="mb-4">
        <span class="text-secondary">
          <i class="fab fa-readme pr-2 fa-xs"></i>
          描述：
        </span>
        {{ restaurant.description }}
      </p>


      <img class="rounded mx-auto d-block mb-4 w-100" src="{{ restaurant.image }}" alt="{{ restaurant.name_en }}"
        style="max-width: 600px;">
    </div>
  </div>
</div>