<div class="container form">
  <div class="form-outer">
    <div class="form-inner">
      <form class="row g-4" action="/restaurants/{{ restaurant._id }}?_method=PUT" method="POST">
        <div class=" form-title-box">
          <div class="form-title"><i class="fas fa-utensils pr-2 me-3"></i>修改餐廳清單</div>
        </div>

        <div class="col-md-7">
          <label for="name" class="form-label">*餐廳中文名稱</label>
          <input type="text" class="form-control" id="name" placeholder="請輸入餐廳名" name="name" value="{{ restaurant.name }}" required>
        </div>
        <div class="col-md-5">
          <label for="name-en" class="form-label">餐廳英文名稱</label>
          <input type="text" class="form-control" id="name-en" placeholder="請輸入餐廳英文名" name="name_en" value="{{ restaurant.name_en }}">
        </div>
        <div class="col-md-4">
          <label for="category" class="form-label">*料理類別</label>
          <input type="text" class="form-control" id="category" placeholder="美式料理..." name="category" value="{{ restaurant.category }}" required>
        </div>
        <div class="col-md-3">
          <label for="rating" class="form-label">*評分</label>
          <input type="number" step="0.1" min="0" max="5" class="form-control" id="rating" placeholder="0 - 5.0"
            name="rating" value="{{ restaurant.rating }}" required>
        </div>
        <div class="col-md-5">
          <label for="phone" class="form-label">*聯絡電話</label>
          <input type="tel" class="form-control" id="phone" placeholder="02-XXXX-XXXX" name="phone" value="{{ restaurant.phone }}" required>
        </div>
        <div class="col-12">
          <label for="location" class="form-label">*餐廳地址</label>
          <input type="text" class="form-control" id="location" placeholder="請輸入餐廳地址" name="location" value="{{ restaurant.location }}" required>
        </div>
        <div class="col-12">
          <label for="description" class="form-label">*描述餐廳特色</label>
          <input type="text" class="form-control" id="description" placeholder="請輸入餐廳特色" name="description" value="{{ restaurant.description }}" required>
        </div>
        <div class="col-12">
          <label for="image" class="form-label">*貼上圖片網址</label>
          <input type="text" class="form-control" id="image" placeholder="請輸入圖片網址" name="image" value="{{ restaurant.image }}" required>
        </div>
        <div class="col-12">
          <label for="google-map" class="form-label">*Google Map 網址</label>
          <input type="text" class="form-control" id="google-map" placeholder="請輸入Google Map網址" name="google_map" value="{{ restaurant.google_map }}" required>
        </div>

        <div class="col-12">
          <button type="submit" class="btn btn-major me-3">提交</button>
          <a href="/" class="btn btn-major">取消</a>
        </div>
      </form>
    </div>
  </div>
</div>