<div class="row mt-5">
  <div class="col-md-3 m-auto">
    <div class="card card-body">
      <h1 class="text-center mt-3">Login</h1>
      {{> message}}
      <form action="/users/login" method="POST">
        <div class="mb-3">
          <label for="email" class="mb-2">Email</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email">
        </div>
        <div class="mb-5">
          <label for="password" class="mb-2">Password</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password">
        </div>
        <div class="d-flex flex-column">
          <button type="submit" class="mb-2 btn btn-primary btn-block">Login</button>
          <a href="/auth/facebook" class="mb-2 btn btn-info btn-block">Facebook Login</a>
        </div>
      </form>
      <p class="mt-2">
        No Account? <a href="/users/register" class="text-primary">Register</a>
      </p>
    </div>
  </div>
</div>