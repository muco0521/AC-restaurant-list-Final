<div class="row mt-5">
  <div class="col-md-3 m-auto">
    <div class="card card-body">
      <h1 class="text-center mt-3">Register</h1>
      <form action="/users/register" method="POST">
        <div class="mb-2">
          <label for="name" class="mb-2">Name</label>
          <input type="name" id="name" name="name" class="form-control" placeholder="Enter name" value="{{ name }}">
        </div>
        <div class="mb-3">
          <label for="email" class="mb-2">Email</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email" value="{{ email }}">
        </div>
        <div class="mb-2">
          <label for="confirmPassword" class="mb-2">Password</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password" value="{{ password }}">
        </div>
        <div class="mb-5">
          <label for="confirmPassword" class="mb-2">Confirm Password</label>
          <input type="confirmPassword" id="confirmPassword" name="confirmPassword" class="form-control"
            placeholder="Enter confirmPassword" value="{{ confirmPassword }}">
        </div>
        <div class="d-flex flex-column">
          <button type="submit" class="mb-2 btn btn-primary btn-block">Register</button>
        </div>
      </form>
      <p class="mt-2">
        Have An Account? <a href="/users/login" class="text-primary">Login</a>
      </p>
    </div>
  </div>
</div>